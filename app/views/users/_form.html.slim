- url = (@user.new_record?)? @user :user_path(@user)
= form_for @user, url: url, html:{class:"form-horizontal"} do |f|
  - if @user.errors.any?
    .alert.alert-danger
      strong = "#{pluralize(@user.errors.count, "error")} prohibited this user from being saved:"
      ul
        - @user.errors.full_messages.each do |message|
          li = message
  .form-group
    = f.label :email, class:"col-sm-3 control-label"
    .col-sm-6
      = f.text_field :email,class:"form-control"
  .form-group
    = f.label :password, class:"col-sm-3 control-label"
    .col-sm-6
      = f.password_field :password,class:"form-control"
  .form-group
    = f.label :password_confirmation, class:"col-sm-3 control-label"
    .col-sm-6
      = f.password_field :password_confirmation,class:"form-control"
  .form-group
    .col-sm-offset-3.col-sm-6
      = f.submit class:"btn btn-default"
      = link_to t('helpers.submit.cancel'), _back_url, class: "btn btn-default"
